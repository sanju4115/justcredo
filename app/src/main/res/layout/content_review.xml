<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.credolabs.justcredo.ReviewActivity"
    tools:showIn="@layout/activity_review">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="437dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/card"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/horizontalScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ecf0f1"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <com.credolabs.justcredo.utility.CircularNetworkImageView
                        android:id="@+id/AddNew"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/camera"
                        />

                    <ImageView
                        android:id="@+id/im11"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/im10"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/im9"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/im8"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/im7"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/im6"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/im5"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/im4"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/im3"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/im2"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:visibility="gone"/>


                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/CountImg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Images: 0"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/BorrarTodas"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginTop="3dp"
                    android:enabled="true"
                    android:text="Delete All"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/UploadImages"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Upload Images" />
    </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
