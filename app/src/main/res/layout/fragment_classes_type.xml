<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.credolabs.justcredo.newplace.NewPlace">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:id="@+id/add"
            android:text="@string/add_own_types"
            android:drawableEnd="@drawable/ic_library_add_green_24dp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/classes_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:text="@string/choose_types"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold" />

        <com.credolabs.justcredo.utility.ExpandableHeightGridView
            android:id="@+id/type_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:numColumns="2" />

    </LinearLayout>


</ScrollView >