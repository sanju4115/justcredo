<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.credolabs.justcredo.newplace.PlaceFacilitiesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_choose_special"
            android:background="@drawable/card"
            android:text="@string/check_special_facilites"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold" />

        <com.credolabs.justcredo.utility.ExpandableHeightGridView
            android:id="@+id/special_facilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:id="@+id/text_choose_facilities"
            android:text="@string/choose_facilities"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:id="@+id/add"
            android:text="@string/add_own_facilities"
            android:drawableEnd="@drawable/ic_library_add_green_24dp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/extra_facilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <com.credolabs.justcredo.utility.ExpandableHeightGridView
            android:id="@+id/facilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:numColumns="2" />

    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
