<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorIcons"
    android:padding="10dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_rating"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:textSize="20sp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/rating"
            android:layout_margin="10dp"
            android:textColor="@color/colorIcons"
            android:id="@+id/rating"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Based on "
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryText"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15dp"
                    android:id="@+id/noOfRatings"
                    android:textColor="@color/colorPrimaryText"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ratings"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryText"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating_credability"
                android:textColor="@color/colorSecondaryText"
                android:textSize="10dp"
                />

        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>



    <View
        android:layout_width="350dp"
        android:layout_height="0.5dp"
        android:background="@color/colorDivider"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout_rating"
        android:id="@+id/divider1"/>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/divider1"
    android:padding="5dp"
    android:id="@+id/layout_reviews"
    android:visibility="gone">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profile1"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_nocover"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profile2"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_nocover"
        android:visibility="gone"
        android:layout_marginLeft="-25dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profile3"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_nocover"
        android:layout_marginLeft="-25dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sanjay Kumar"
                android:id="@+id/reviewer_name1"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text=" and "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no"
                android:textSize="12dp"
                android:id="@+id/noOfReviewsMinusOne"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" others reviewed it."
                android:textSize="12dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read All Reviews (11)"
            android:layout_marginLeft="10dp"
            android:id="@+id/all_review"
            android:textColor="@color/red"
            android:textStyle="bold"/>

    </LinearLayout>




</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/divider1"
        android:padding="5dp"
        android:id="@+id/layout_reviews_no"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No one reviewed it yet. Be the first one to reivew it."
            android:gravity="center"
            />

    </LinearLayout>


    <View
        android:layout_width="350dp"
        android:layout_height="0.5dp"
        android:background="@color/colorDivider"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout_reviews"
        android:id="@+id/divider2"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/divider2"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How was your experience?"
                android:textSize="12dp"
                android:textColor="@color/colorPrimaryText"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tell everyone about it!"
                android:textSize="10dp"
                android:textColor="@color/colorSecondaryText"
                />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rating"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Add Your Review"
            android:id="@+id/btn_review"
            android:textColor="@color/colorIcons"
            android:padding="10dp"/>
    </LinearLayout>




    </LinearLayout>

</RelativeLayout>